  {% endif %}
  {% if section.settings.enable_rocktape_performance %}
  <div class="stance-feature-block-container">
         <div class="stance-content-block">
           <div class="content">
             <h2>{{ section.settings.rocktape_block_heading1 }}</h2>
             <p>{{ section.settings.rocktape_block_desc1 }}</p>
