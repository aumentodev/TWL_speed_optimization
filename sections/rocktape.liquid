{% if section.settings.enable_rocktape_page %}
<main class="{{page.title | handle }} merged-page-template">  
  {%if  section.settings.enable_banner_img_rocktape %}  
  <section id="page-header">
    <div class="header-background compexpagebn desktop-stance">
      <div class="changable-image" style="background-image: url({{ section.settings.feel_banner_img_rocktape | img_url: 'master' }});">
        <div class="page-width">
          <div class="grid">
            <div class="grid__item">
              {%if  section.settings.enable_rocktape_page_heading %}

              <h1>{{ page.title }}</h1>
              {% endif %}
              {%if  section.settings.enable_rocktape_customhead %}

              <h1>{{ section.settings.enable_rocktape_customhead_text }}</h1>
              {% endif %}

            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="header-background mobile-stance">
      <div class="changable-image" style="background-image: url({{ section.settings.feel_banner_img_rocktape_mobile | img_url: 'master' }});">
        <div class="page-width">
          <div class="grid">
            <div class="grid__item">
              {%if  section.settings.enable_rocktape_page_heading %}

              <h1>{{ page.title }}</h1>
              {% endif %}
              {%if  section.settings.enable_rocktape_customhead %}

              <h1>{{ section.settings.enable_rocktape_customhead_text }}</h1>
              {% endif %}

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  {% endif %}
  
  
  {%if section.settings.enable_video_bottom_img_rocktape %}
  <div class="a-set-banner-below-img aset_stance_img">
      <div class="desktop">
        <img src="{{ section.settings.video_bottom_desk_img_rocktape | img_url: 'master' }}">
      </div>
    </div>  
    <div class="a-set-banner-below-img-mob">
      <div class="mobile">
        <div class="page-width">
          <div class="a-set-usp">
            <img src="{{ section.settings.video_bottom_mob_img1_rocktape | img_url: 'master' }}">
          </div>
          <div class="a-set-usp">
            <img src="{{ section.settings.video_bottom_mob_img2_rocktape | img_url: 'master' }}">
          </div>
          <div class="a-set-usp">
            <img src="{{ section.settings.video_bottom_mob_img3_rocktape | img_url: 'master' }}">
          </div>
        </div>
      </div>
    </div>
  {% endif %}
  
  {%if  section.settings.enable_feel_banner_img_rocktape %}
  <div class="section a-set-feel-banner-img page">
    <a href="{{ section.settings.rocktape_feel_link }}">
      <img src="{{ section.settings.feel_banner_img_picker_rocktape | img_url: 'master' }}" alt="feel_banner_img" class="a-set-img" />
    </a>
  </div>
  {% endif %}
  
  {% if section.settings.rocktape_countdown %}
    {% include 'countdown' %} 
  {% endif %}
  
  {% if section.settings.enable_rocktape_col %}
  <div class="a-set-first-collection">
       {% assign actual_product = product %}
    {% assign vendor = product.vendor %}
    {% assign vendor_handle = vendor | handleize %}
    {% assign handle = product.handle %}
    {% assign brand_products = "" %}
    {% for product in collections[section.settings.rocktape_coll].products %}
      {% capture temp %}
      {{product.handle}}
      {% if forloop.last == false %},{% endif%}
      {% endcapture %}
      {% assign brand_products = brand_products | append: temp %}
    {% endfor %}
    {% assign product_handles = brand_products | split: ","%}
    {% if product_handles.size > 0 %}
      <section id="by-brand">
        <div class="page-width">
          <div class="grid">
            <div class="grid__item">
              <div class="division-wrap">
                <h1 class="division-title">
                    {{ section.settings.rocktape_coll_heading}}
                </h1>
              </div>
            </div>
          </div>
          <div class="">
              <div class="swiper-container slider-carousel-wrap">
                <div class="swiper-wrapper collection-items-holder hot-deals auto-load-col center_reviews">
                  {% assign counter = 0  %}
                  {% assign max_products = 5 | times: 1 %}
                  {% for handle in product_handles %}
                  {% assign counter = counter | plus: 1  %}
                  {% if counter <= max_products %}
                    {% assign product_handle = handle | handleize %}
                    {% assign product = all_products[product_handle] %}
                      <div class="swiper-slide  extra-small--one-whole small--one-half medium-up--one-quarter">
                          {% include 'a-product-card-grid-2' %}
                      </div>
                  {% endif %}
                  {% endfor %}
                </div>
                <!-- Add Arrows -->
                <div class="swiper-button-next"><i class="fa fa-angle-right"></i></div>
                <div class="swiper-button-prev"><i class="fa fa-angle-left"></i></div>
                <div class="stance-view-all-button">
                  <a href="{{ section.settings.rocktape_coll_link }}">{{ section.settings.rocktape_view_all_buy }}</a>
                </div>
              </div>
          </div>
        </div>
      </section>
    {% endif %}
    {% assign product  = actual_product %}
  </div>
  {% endif %}
  
  {% if section.settings.enable_rocktape_first_col %}
  <div class="a-set-second-collection">
       {% assign actual_product = product %}
    {% assign vendor = product.vendor %}
    {% assign vendor_handle = vendor | handleize %}
